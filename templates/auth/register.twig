{% extends 'base.twig' %}

{% block title %}Inscription{% endblock %}

{% block body %}
    <h1>Inscription</h1>

    <form method="post">
        {{ formValidator.generateInputText('username', 'text', 'Nom d\'utilisateur') | raw('html') }}
        {{ formValidator.generateInputText('email', 'email', 'Adresse email') | raw('html') }}
        {{ formValidator.generateInputText('password', 'password', 'Mot de passe') | raw('html') }}
        {{ formValidator.generateInputText('password-confirm', 'password', 'Vérification mot de passe') | raw('html') }}

        <div class="form-group">
            <label for="role">Veux-tu être un admin ?</label>
            <input type="checkbox"
                   class="form-control <?= (isset($errors['role']) && !empty($errors['role'])) ? 'is-invalid' : '' ?>"
                   id="role" name="role" value="<?= $_POST['role'] ?? '' ?>">
            <div class="invalid-feedback"><?= $errors['role'] ?? "" ?></div>
        </div>

        <input type="submit" value="S'inscrire" class="btn btn-outline-success">

    </form>
{% endblock %}